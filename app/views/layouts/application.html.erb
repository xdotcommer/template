<!DOCTYPE html>
<html>
<head>
  <title>Web App</title>
  <%= stylesheet_link_tag 	 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="/">Web App</a></h1>
      <div id="user-navigation">
        <ul class="wat-cf">
	
			    <% if user_signed_in? %>
	          <li><%= link_to t("web-app-theme.profile", :default => "#{current_user.email}"), "#" %></li>
<!--
 	          <li><a href="#"><%= t("web-app-theme.settings", :default => "Settings") %></a></li>
-->
	          <li><%= link_to t("web-app-theme.logout", :default => "Sign out"), destroy_user_session_path, :method => :delete, :class => 'logout' %></a></li>
			        
			    <% else %>
						<li><%= link_to t("web-app-theme.logout", :default => "Register"), new_user_registration_path, :class => 'logout' %></a></li>
						<li><%= link_to t("web-app-theme.logout", :default => "Sign in"), new_user_session_path, :class => 'logout' %></a></li>
			    <% end %>

        </ul>
      </div>
      <div id="main-navigation">
        <ul class="wat-cf"></ul>
      </div>
    </div>    
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <div id="main">
        <%= yield %>
        <div id="footer">
          <div class="block">
            <p>Copyright &copy; <%= Time.now.year %> Web App.</p>
          </div>      
        </div>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>    
  </div>
</body>
</html>
